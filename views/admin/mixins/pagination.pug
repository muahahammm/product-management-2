mixin pagination(pagination)
    nav 
        ul(class="pagination")

            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(class="page-link" button-click=1) Trang đầu

            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(class="page-link" button-click=pagination.currentPage-1) Trang trước

            - for(var i = 1; i <= pagination.totalPages; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(class="page-link" button-click=i) #{i}

            if(pagination.currentPage < pagination.totalPages)
                li(class="page-item")
                    button(class="page-link" button-click=pagination.currentPage+1) Trang kế

            if(pagination.currentPage < pagination.totalPages)
                li(class="page-item")
                    button(class="page-link" button-click=pagination.totalPages) Trang cuối