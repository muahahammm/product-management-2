extends ../../layouts/default.pug
include ../../mixins/show-alert.pug
include ../../mixins/no-permission.pug

block main 
    if(role.permissions.includes("accounts_edit"))
        +alert-success(5000)
        +alert-errol(5000)

        h1(class="mb-4") Chỉnh sửa tài khoản 

        if(roles)
            form(action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH` method="POST" enctype="multipart/form-data")
                div(class="form-group")
                    label(for="fullname") Họ tên *
                    input(type="text" class="form-control" id="fullname" name="fullname" required value=data.fullname) 

                div(class="form-group")
                    label(for="email") Email *
                    input(type="text" class="form-control" id="email" name="email" required value=data.email)

                div(class="form-group")
                    label(for="password") Mật khẩu *
                    input(type="text" class="form-control" id="password" name="password" required) 

                div(class="form-group")
                    label(for="phone") Số điện thoại *
                    input(type="text" class="form-control" id="phone" name="phone" required value=data.phone) 

                div(class="form-group" upload-image)
                    label(for="avatar") Ảnh đại diện
                    input(type="file" class="form-control-file" id="avatar" name="avatar" accept="image/*" upload-image-input)
                    div(class="image-preview-wrapper")
                        img(src=data.avatar upload-image-preview class="image-preview")
                        button(type="button" class="btn-close" aria-label="Close" button-close)

                div(class="form-group")
                    label(for="role_id") Phân quyền 
                    select(name="role_id" id="role_id" class="form-group")
                        option(disabled) -- Chọn -- 
                        each item in roles 
                            option(value=item.id selected=(item.id == data.role_id ? true : false)) #{item.title}

                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio" class="form-check-input" id="statusActive" name="status" value="active" 
                        checked=(data.status === "active" ? true : false)
                        )
                    label(for="statusActive" class="form-check-label") Hoạt động
                
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio" class="form-check-input" id="statusInActive" name="status" value="inactive"
                        checked=(data.status === "inactive" ? true : false)
                        )
                    label(for="statusActive" class="form-check-label") Dừng hoạt động

                div(class="form-group")
                    button(type="submit" class="btn btn-primary") Cập nhật
        else
            p Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản
            p 
                a(href=`${prefixAdmin}/roles/create` class="btn btn-secondary") Tạo nhóm quyền
    else 
        +no-permission()